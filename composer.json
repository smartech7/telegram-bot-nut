{
  "name": "sergix44/nutgram",
  "description": "The Telegram bot library that doesn't drive you nuts",
  "keywords": [
    "sergix44",
    "nutgram"
  ],
  "homepage": "https://github.com/SergiX44/Nutgram",
  "license": "MIT",
  "authors": [
    {
      "name": "Sergio Brighenti",
      "email": "sergio@brighenti.me",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.2",
    "netresearch/jsonmapper": "^4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.17",
    "pestphp/pest": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "SergiX44\\Nutgram\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SergiX44\\Nutgram\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
